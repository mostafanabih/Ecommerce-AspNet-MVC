@using Ecommerce.Enums.Data
@model Product
@{
	ViewData["title"] = "Create New Product";
	var Category = new SelectList(ViewBag.CategoryId, "Id", "Name");
}

<div class="row">
	<div class="col-md-8 offset-2">
		<p><h1 class="text-center">Add New Product</h1></p>
	</div>
	<div class="col-md-8 offset-2">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="controle-label"></label>
				<input asp-for="Name" class="form-control" autocomplete="off" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="controle-label"></label>
				<textarea asp-for="Description" class="form-control" rows=3></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Price" class="controle-label"></label>
				<input asp-for="Price" class="form-control" autocomplete="off" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ImgUrl" class="controle-label"></label>
				<input asp-for="ImgUrl" class="form-control" autocomplete="off" />
				<span asp-validation-for="ImgUrl" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ProductColor" class="controle-label"></label>
				<select asp-for="ProductColor" class="form-control" asp-items="@Html.GetEnumSelectList<ProductColor>()"></select>
				<span asp-validation-for="ProductColor" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label>CategoryName</label>
				<select asp-for="CategoryId" class="form-control" asp-items="@Category"></select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div class="col-md-4 offset-4 text-center">
				<img style="width:100%;" id="imagePreview" />
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-outline-success float-right" />
				<a asp-action="Index" class="btn btn-outline-secondary">Show All Category</a>
			</div>

		</form>

	</div>
</div>

@section Scripts{
@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script>
$("#ImgUrl").on("change",function(){
	var Result = document.getElementById("imagePreview");
	Result.src = $(this).val();
});
</script>

}