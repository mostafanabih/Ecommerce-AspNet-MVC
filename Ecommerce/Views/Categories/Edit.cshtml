@model Category

@{
   ViewData["Title"] = "Edit Category";
}


<div class="row">
	<div class="col-md-8 offset-2">
		<p><h1 class="text-center">Edit @Model.Name Category</h1></p>
	</div>
	<div class="col-md-8 offset-2">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="controle-label"></label>
				<input asp-for="Name" class="form-control" autocomplete="off" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="controle-label"></label>
				<textarea asp-for="Description" class="form-control" rows=3></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Update" class="btn btn-outline-info float-right" />
				<a asp-action="Index" class="btn btn-outline-secondary">Show All Category</a>
			</div>

		</form>

	</div>
</div>

@section Scripts{
@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}